{
    "env": {
        "browser": true,
        "es2021": true
    },
    "plugins": ["@html-eslint"],
    "extends": ["eslint:recommended", "google", "prettier"],
    "overrides": [
        {
            "files": ["*.html"],
            "parser": "@html-eslint/parser",
            "extends": ["plugin:@html-eslint/recommended"]
        }
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "ignorePatterns": ["../dist/*"],
    "rules": {}
    
    // "validate": ["javascript", "html"]
}
